
@{
    ViewData["Title"] = "Cariler";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@model CariViewModel

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Kayıtlı Cariler</h1>
    <button class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" data-toggle="modal" data-target="#cariEkle" data-post-url="/Cari/CariEkle/" ><i class="icofont-people"></i>Cari Ekle</button>
</div>
<div class="card shadow mb-4">

    <div class="card-body">
        <div class="ajax-table">
            <partial name="CariListPartial" model="Model.CariBilgileri" />
        </div>
    </div>
</div>
<partial name="CariEklePartial" />
